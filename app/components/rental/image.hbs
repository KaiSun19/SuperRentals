<button type="button" class="image {{if this.isLarge "large" ""}}" {{on "click" this.toggleSize}}> {{!-- when clicked the image becomes smaller  --}}
  <img ...attributes>  {{!-- if logic has a condition relating to image.js and the output --}} {{!-- on is a modifier with click as a option --}}
    {{#if this.isLarge}}
      <small>View Smaller</small>
    {{else}}
      <small>View Larger</small>
    {{/if}}
</button>

